    "drizzle-orm": "^0.30.6",
    "elysia": "latest",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.20.14",
    "tailwindcss": "^3.4.1"
  },
  "module": "src/index.js"
}
